# ==================================
# Luma MVP - Environment Variables
# ==================================

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/luma

# Supabase (for production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_BUCKET=luma-documents

# File Storage
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports
MAX_UPLOAD_MB=15

# OCR Configuration
OCR_PROVIDER=tesseract
# Options: tesseract | vision

# Google Cloud Vision (optional)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Rate Limiting
RATE_LIMIT=30

# Localization
LANG_DEFAULT=es
USE_SPAIN_FACTORS=false

# Admin Configuration
ADMIN_EMAILS=salmane@getluma.es,admin@getluma.es

# Application
DEBUG=True
LOG_LEVEL=INFO

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://luma.vercel.app
